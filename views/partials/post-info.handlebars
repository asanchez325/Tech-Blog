<article class="card">
<div class="card-header">
    <div class="card-title">
        <a href="/post/{{id}}">{{title}}</a>
    </div>
    <div class="meta">
        {{user.username}} Created on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
  </div>
  <div class= "card-body">
    <span>({{post_content}})</span>
  </div>
</article>