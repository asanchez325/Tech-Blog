<article class="post">
  <div class="title">
    <a href={{title}}</a>
    <span>({{post_content}})</span>
  </div>
  <div class="meta">
    {{post.user.username}} on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>